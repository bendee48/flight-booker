<h1>Booking Details</h1>

<h3>To: <%= @flight.to_airport.name %></h3>
<h3>From: <%= @flight.from_airport.name %></h3>
<h3>Date: <%= @flight.start_time %></h3>
<h3>Duration: <%= @flight.duration %></h3>
<h3>Passengers:</h3>
<% @booking.passengers.each do |passenger| %>
  <ul>
    <li><%= passenger.name %></li>
  </ul>
<% end %>
